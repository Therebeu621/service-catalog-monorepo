{
  "name": "service-catalog-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w apps/api\" \"npm run dev -w apps/web\"",
    "build": "npm run build -w apps/api && npm run build -w apps/web",
    "lint": "eslint . --ext .ts,.vue,.js,.cjs",
    "format": "prettier --write .",
    "test": "npm run test -w apps/api && npm run test -w apps/web",
    "db:migrate": "npm run db:migrate -w apps/api",
    "db:seed": "npm run seed -w apps/api",
    "db:push": "npm run db:push -w apps/api"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.28.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vue-eslint-parser": "^9.4.3"
  }
}
